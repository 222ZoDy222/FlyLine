<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FlyLine" parent="Theme.AppCompat.Light">

        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/gray</item>

        <!-- Action bar initialize font -->
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="ButtonStyle">
        <item name="fontFamily">@font/oswaldregular</item>
        <item name="android:fontFamily">@font/oswaldregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
    </style>
    <!-- =============================================       TextView Style       ============================================= -->
    <style name="TextStyle">
        <item name="fontFamily">@font/oswaldregular</item>
        <item name="android:fontFamily">@font/oswaldregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- ====================================================================================================================== -->

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="color">@color/white</item>
        <item name="android:textSize">20pt</item>
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <!-- =============================================       Time Dialog        ============================================= -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item> <!-- Цвет текста заголовка -->
        <item name="android:background">@color/black</item> <!-- Цвет фона диалога -->
        <item name="fontFamily">@font/oswaldregular</item>
        <item name="android:fontFamily">@font/oswaldregular</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="CenteredDialogTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- ====================================================================================================================== -->

    <!-- ============================================= Action bar initialize font ============================================= -->
    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextStyle</item>
        <item name="background">@color/gray</item>
    </style>
    <!-- ====================================================================================================================== -->


    <style name="Theme.FlyLine" parent="Base.Theme.FlyLine" />
</resources>